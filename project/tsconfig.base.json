{
  "compileOnSave": false,
  "compilerOptions": {
    //"allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    //"composite": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/blog-module": [
        "libs/blog-module/src/index.ts"
      ],
      "@project/shared": [
        "libs/shared/src/index.ts"
      ],
      "@project/user-config": [
        "libs/user-module/config/src/index.ts"
      ],
      "@project/user-module": [
        "libs/user-module/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}