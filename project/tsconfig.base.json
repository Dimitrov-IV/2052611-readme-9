{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": false,
    "lib": [
      "es2022",
      "DOM"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@project/blog-module": [
        "libs/blog-module/src/index.ts"
      ],
      "@project/user-config": [
        "libs/user-module/config/src/index.ts"
      ],
      "@project/shared": [
        "libs/shared/src/index.ts"
      ],
      "@project/user-module": [
        "libs/user-module/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}