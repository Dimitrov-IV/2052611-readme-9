{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "ES2015",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "baseUrl": "."
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../../libs/blog-module/tsconfig.json"
    }
  ]
}